<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.fragment.createRental.CreateCarFragment"
    android:background="@drawable/background_car">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">






        <TextView
            android:id="@+id/details_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:background="@color/white"
            android:fontFamily="@font/gothammedium"
            android:text="@string/details_car"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/input_cyear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:drawablePadding="10dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="@string/construction_year"
            android:inputType="date"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorLink="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_rental"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/input_mileage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="@string/mileage"
            android:inputType="number"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:textColor="@color/textfont"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_cyear" />

        <EditText
            android:id="@+id/input_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="@string/model"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColor="@color/textfont"
            android:background="@color/white"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_mileage" />

        <EditText
            android:id="@+id/input_power"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="@string/power"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:textColor="@color/textfont"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_model" />

        <EditText
            android:id="@+id/input_fuel_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="@string/fuel_type"
            android:inputType="text"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:textColor="@color/textfont"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_power" />

        <EditText
            android:id="@+id/input_fuel_use_per_km"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="@string/fuel_use_per_km"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:textColor="@color/textfont"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_fuel_type" />

        <EditText
            android:id="@+id/input_fuel_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:ems="10"
            android:background="@color/white"
            android:fontFamily="@font/gothammedium"
            android:hint="@string/fuel_price"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp"
            android:textColor="@color/textfont"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_fuel_use_per_km" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/engine_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:background="@color/white"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/input_fuel_price"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_type"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/car_to_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothambold"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/next"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/engine_type"
            app:layout_constraintVertical_bias="0.0" />



    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>